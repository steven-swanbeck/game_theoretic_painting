<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="spot_arm" params="name" >

    <!-- <link name="${name}_base_link"/> -->

    <link name="${name}_shoulder_yaw_link">
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <!-- <origin xyz="0.292 0.0 0.188" rpy="0 0 0"/> -->
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_sh0.obj"/>
        </geometry>
        <material name="arm0.link_sh0">
            <color rgba="0.2 0.2 0.2 1"/>
        </material>
        </visual>
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <!-- <origin xyz="0.292 0.0 0.188" rpy="0 0 0"/> -->
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_sh0.obj"/>
        </geometry>
        <material name="arm0.link_sh0">
            <color rgba="1 0.2 0.2 1"/>
        </material>
        </collision>
        <inertial>
            <mass value="${shoulder_mass}"/>
            <inertia ixx="${(1/12) * shoulder_mass * (shoulder_width * shoulder_width + shoulder_height * shoulder_height)}" ixy="0.0" ixz="0.0"
                        iyy="${(1/12) * shoulder_mass * (shoulder_length * shoulder_length + shoulder_height * shoulder_height)}" iyz="0.0"
                        izz="${(1/12) * shoulder_mass * (shoulder_length * shoulder_length + shoulder_width * shoulder_width)}" />     
        </inertial>
    </link>
    <joint name="${name}_shoulder_yaw" type="revolute">
        <!-- <origin xyz="0 0 0" rpy="0 0 0"/> -->
        <origin xyz="0.292 0.0 0.188" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <!-- <parent link="${name}_base_link"/> -->
        <parent link="base_link"/>
        <child link="${name}_shoulder_yaw_link"/>
        <limit effort="1000" velocity="1000.00" lower="-2.61799387799149441136" upper="3.14159265358979311599"/>
    </joint>

    <link name="${name}_shoulder_pitch_link">
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_sh1.obj"/>
        </geometry>
        <material name="arm0.link_sh1">
            <color rgba="0.2 0.2 0.2 1"/>
        </material>
        </visual>
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_sh1.obj"/>
        </geometry>
        <material name="arm0.link_sh1">
            <color rgba="1 0.2 0.2 1"/>
        </material>
        </collision>
        <inertial>
            <mass value="${upper_arm_mass}"/>
            <inertia ixx="${(1/12) * upper_arm_mass * (upper_arm_width * upper_arm_width + upper_arm_height * upper_arm_height)}" ixy="0.0" ixz="0.0"
                        iyy="${(1/12) * upper_arm_mass * (upper_arm_length * upper_arm_length + upper_arm_height * upper_arm_height)}" iyz="0.0"
                        izz="${(1/12) * upper_arm_mass * (upper_arm_length * upper_arm_length + upper_arm_width * upper_arm_width)}" />     
        </inertial>
    </link>
    <joint name="${name}_shoulder_pitch" type="revolute">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <parent link="${name}_shoulder_yaw_link"/>
        <child link="${name}_shoulder_pitch_link"/>
        <limit effort="1000" velocity="1000.00" lower="-3.14159265358979311599" upper="0.52359877559829881565"/>
    </joint>

    <!-- ! Don't think this exists on the robot, skipping for now, will come back to if it doesn't work -->
    <link name="${name}_shoulder_roll_link">
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_hr0.obj"/>
        </geometry>
            <material name="arm0.link_hr0">
            <color rgba="0.2 0.2 0.2 1"/>
            </material>
        </visual>
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_hr0.obj"/>
        </geometry>
            <material name="arm0.link_hr0">
            <color rgba="1 0.2 0.2 1"/>
            </material>
        </collision>
        <inertial>
            <mass value="${shoulder_roll_mass}"/>
            <inertia ixx="${(1/12) * shoulder_roll_mass * (shoulder_roll_width * shoulder_roll_width + shoulder_roll_height * shoulder_roll_height)}" ixy="0.0" ixz="0.0"
                        iyy="${(1/12) * shoulder_roll_mass * (shoulder_roll_length * shoulder_roll_length + shoulder_roll_height * shoulder_roll_height)}" iyz="0.0"
                        izz="${(1/12) * shoulder_roll_mass * (shoulder_roll_length * shoulder_roll_length + shoulder_roll_width * shoulder_roll_width)}" />     
        </inertial>
    </link>
    <joint name="${name}_shoulder_roll" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <parent link="${name}_shoulder_pitch_link"/>
        <child link="${name}_shoulder_roll_link"/>
	<limit effort="0" velocity="0" lower="0" upper="0"/>
    </joint>

    <link name="${name}_elbow_pitch_link">
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_el0.obj"/>
        </geometry>
            <material name="arm0.link_el0">
            <color rgba="0.2 0.2 0.2 1"/>
            </material>
        </visual>
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_el0.obj"/>
        </geometry>
            <material name="arm0.link_el0">
            <color rgba="1 0.2 0.2 1"/>
            </material>
        </collision>
        <inertial>
            <mass value="${lower_arm_elbow_mass}"/>
            <inertia ixx="${(1/12) * lower_arm_elbow_mass * (lower_arm_elbow_width * lower_arm_elbow_width + lower_arm_elbow_height * lower_arm_elbow_height)}" ixy="0.0" ixz="0.0"
                        iyy="${(1/12) * lower_arm_elbow_mass * (lower_arm_elbow_length * lower_arm_elbow_length + lower_arm_elbow_height * lower_arm_elbow_height)}" iyz="0.0"
                        izz="${(1/12) * lower_arm_elbow_mass * (lower_arm_elbow_length * lower_arm_elbow_length + lower_arm_elbow_width * lower_arm_elbow_width)}" />     
        </inertial>
    </link>
    <joint name="${name}_elbow_pitch" type="revolute">
        <origin xyz="0.3385 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <parent link="${name}_shoulder_pitch_link"/>
        <child link="${name}_elbow_pitch_link"/>
        <limit effort="1000" velocity="1000.00" lower="0" upper="3.14159265358979311599"/>
    </joint>

    <link name="${name}_elbow_roll_link">
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_el1.obj"/>
        </geometry>
            <material name="arm0.link_el1">
            <color rgba="0.2 0.2 0.2 1"/>
            </material>
        </visual>
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_el1.obj"/>
        </geometry>
            <material name="arm0.link_el1">
            <color rgba="1 0.2 0.2 1"/>
            </material>
        </collision>
        <inertial>
            <mass value="${lower_arm_mass}"/>
            <inertia ixx="${(1/12) * lower_arm_mass * (lower_arm_width * lower_arm_width + lower_arm_height * lower_arm_height)}" ixy="0.0" ixz="0.0"
                        iyy="${(1/12) * lower_arm_mass * (lower_arm_length * lower_arm_length + lower_arm_height * lower_arm_height)}" iyz="0.0"
                        izz="${(1/12) * lower_arm_mass * (lower_arm_length * lower_arm_length + lower_arm_width * lower_arm_width)}" />     
        </inertial>
    </link>
    <joint name="${name}_elbow_roll" type="revolute">
        <origin xyz="0.40330 0.0 0.0750" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <parent link="${name}_elbow_pitch_link"/>
        <child link="${name}_elbow_roll_link"/>
        <limit effort="1000" velocity="1000.00" lower="-2.79252680319092716487" upper="2.79252680319092716487"/>
    </joint>

    <link name="${name}_wrist_pitch_link">
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_wr0.obj"/>
        </geometry>
            <material name="arm0.link_wr0">
            <color rgba="0.2 0.2 0.2 1"/>
            </material>
        </visual>
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_wr0.obj"/>
        </geometry>
            <material name="arm0.link_wr0">
            <color rgba="1 0.2 0.2 1"/>
            </material>
        </collision>
        <inertial>
            <mass value="${wrist_pitch_mass}"/>
            <inertia ixx="${(1/12) * wrist_pitch_mass * (wrist_pitch_width * wrist_pitch_width + wrist_pitch_height * wrist_pitch_height)}" ixy="0.0" ixz="0.0"
                        iyy="${(1/12) * wrist_pitch_mass * (wrist_pitch_length * wrist_pitch_length + wrist_pitch_height * wrist_pitch_height)}" iyz="0.0"
                        izz="${(1/12) * wrist_pitch_mass * (wrist_pitch_length * wrist_pitch_length + wrist_pitch_width * wrist_pitch_width)}" />     
        </inertial>
    </link>
    <joint name="${name}_wrist_pitch" type="revolute">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <parent link="${name}_elbow_roll_link"/>
        <child link="${name}_wrist_pitch_link"/>
        <limit effort="1000" velocity="1000.00" lower="-1.83259571459404613236" upper="1.83259571459404613236"/>
    </joint>

    <link name="${name}_wrist_roll_link">
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_wr1.obj"/>
        </geometry>
            <material name="arm0.link_wr1">
            <color rgba="0.2 0.2 0.2 1"/>
            </material>
        </visual>
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_wr1.obj"/>
        </geometry>
            <material name="arm0.link_wr1">
            <color rgba="1 0.2 0.2 1"/>
            </material>
        </collision>
        <inertial>
            <mass value="${wrist_roll_mass}"/>
            <inertia ixx="${(1/12) * wrist_roll_mass * (wrist_roll_width * wrist_roll_width + wrist_roll_height * wrist_roll_height)}" ixy="0.0" ixz="0.0"
                        iyy="${(1/12) * wrist_roll_mass * (wrist_roll_length * wrist_roll_length + wrist_roll_height * wrist_roll_height)}" iyz="0.0"
                        izz="${(1/12) * wrist_roll_mass * (wrist_roll_length * wrist_roll_length + wrist_roll_width * wrist_roll_width)}" />     
