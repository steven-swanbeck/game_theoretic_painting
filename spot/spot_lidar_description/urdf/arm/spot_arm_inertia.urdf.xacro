    <joint name="${name}_wrist_roll" type="revolute">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <parent link="${name}_wrist_pitch_link"/>
        <child link="${name}_wrist_roll_link"/>
        <limit effort="1000" velocity="1000.00" lower="-2.87979326579064354163" upper="2.87979326579064354163"/>
    </joint>

    <link name="${name}_fingers_link">
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_fngr.obj"/>
        </geometry>
        <material name="arm0.link_fngr">
            <color rgba="0.2 0.2 0.2 1"/>
        </material>
        </visual>
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://spot_lidar_description/meshes/arm/arm0.link_fngr.obj"/>
        </geometry>
        <material name="arm0.link_fngr">
            <color rgba="0.2 0.2 0.2 1"/>
        </material>
        </collision>
        <inertial>
            <mass value="${finger_mass}"/>
