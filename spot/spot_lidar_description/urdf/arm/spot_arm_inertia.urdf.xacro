                        izz="${(1/12) * finger_mass * (finger_length * finger_length + finger_width * finger_width)}" />     
        </inertial>
    </link>
    <joint name="${name}_fingers" type="revolute">
        <origin xyz="0.11745 0 0.014820" rpy="0 0 0"/>
        <axis xyz="0.0 1.0 0.0"/>
        <parent link="${name}_wrist_roll_link"/>
        <child link="${name}_fingers_link"/>
        <limit effort="1000" velocity="1000.00" lower="-1.57" upper="0.0"/>
    </joint>
    </xacro:macro>
<!-- Transmissions -->
  <transmission name="tran1">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="arm0_shoulder_yaw">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="motor1">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>
  <transmission name="tran2">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="arm0_shoulder_pitch">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="motor2">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
