<launch>
  <include file="$(find spot_arm_moveit_config)/launch/planning_context.launch" >
    <arg name="load_robot_description" value="true" />
  </include>

  <include file="$(find spot_arm_moveit_config)/launch/move_group.launch">
    <arg name="publish_monitored_planning_scene" value="true" />
  </include>

  <include file="$(find spot_arm_moveit_config)/launch/moveit_rviz.launch">
    <arg name="rviz_config" value="$(find spot_arm_moveit_config)/launch/moveit.rviz"/>
  </include>
</launch>
